@model BinaryCityProject.Models.Client 
   

<form method="post" asp-action="createClient">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <h2 class="text-info pl-3">Create Client</h2>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="form-group row">
                            <div class="col-4">
                                <label>Name</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Client_Name" class="form-control" />
                               <span asp-validation-for="@Model.Client_Name" class="error"></span>
                        </div>
                        </div>
                         <br />
                        <div class="form-group row">
                            <div class="col-8 offset-4 row">

                                <div class="col">
                                    <input type="submit" class="btn btn-info w-100" value="Create" />
                                </div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-success w-100">Back</a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-4">
                        @* Keep this empty *@
                    </div>
                </div>
            </div>
        </form>
