@model BinaryCityProject.Models.Contact 
   

<form method="post" asp-action="createContact">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <h2 class="text-info pl-3">Create Contact</h2>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="form-group row">
                            <div class="col-4">
                                <label>Name</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Contact_Name" class="form-control" />
                               <span asp-validation-for="@Model.Contact_Name" class="error"></span>
                        </div>
                        </div>
                         <br />
                        <div class="form-group row">
                            <div class="col-4">
                                <label>Surname</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Contact_Name_Surname" class="form-control" />
                                           <span asp-validation-for="@Model.Contact_Name_Surname" class="error"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <div class="col-4">
                                <label> Email Address</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Contact_Mail" class="form-control" />
                                     <span asp-validation-for="@Model.Contact_Mail" class="error"></span>
                            </div>
                            
                        </div>
                        <br />
                        <div class="form-group row">
                            <div class="col-8 offset-4 row">

                                <div class="col">
                                    <input type="submit" class="btn btn-info w-100" value="Create" />
                                </div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-success w-100">Back</a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-4">
                        @* Keep this empty *@
                    </div>
                </div>
            </div>
        </form>
