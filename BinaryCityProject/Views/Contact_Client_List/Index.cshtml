@model BinaryCityProject.Models.Contact_Client_List

<div class="container">
    <div class="card-body d-flex justify-content-around">
        <h1> Contact Card</h1>
    </div>
    <div class="card">
        <div class="card-body d-flex justify-content-around">
            <h5 class="card-title">@Model.Contact!.Contact_Name</h5>
            <p class="card-text">
                <h3>Key : <b>@Model.Client_Key</b> </h3>
                <h3> No. Of Contacts : @Model.Contact.Clients!.Length</h3>
            </p>
        </div>

        @if (Model.Contact.Clients.Length! > 0)
        {
            <table class="table table-dark table-striped">
                @foreach (Client c in @Model.Contact.Clients)
                {
                    <tr>
                        <th scope="row">2</th>
                        <td>@c.Client_Key</td>
                        <td>@c.Client_Name</td>
                        <td>
                            <a class="card-link"
                       asp-area=""
                       asp-controller="Contact"
                       asp-action="delinkClient"
                       asp-route-Contact_Key="@Model.Contact_Key"
                       asp-route-Client_Key="@c.Client_Key">
                                Unlink
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {

            <button type="button" class="btn btn-danger btn-lg">No Client(s) Found</button>

        }


        <div class="card-body  d-flex justify-content-around">
            <a class="text-dark" asp-area="" asp-controller="Contact_Client_List" asp-action="ClientLink" asp-route-id="@Model.Contact_Key">
                <button class="btn btn-primary">Link New Client</button>
            </a>
        </div>
    </div>
</div>
